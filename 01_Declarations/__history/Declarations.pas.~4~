implementation

 constructor TMemberPanel.create(AOwner : TComponent);

 begin
   showmessage('Panel Erzeugt');
 end;

 procedure TMemberPanel.createButtons(Panel : TMemberPanel);
 var btn : TButton;
 begin
    {
    btn.Create(self);
    btn.Name    := 'TestButton' ;
    btn.Text    := btn.Name;
    btn.Parent  := Panel;
    testbtn.align   := testbtn.Align.Center;
    }
 end;


end.
